{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pulsar Settings Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#blocks"
		}
	],
	"repository": {
		"blocks": {
			"patterns": [{ "include": "#block-name"}, { "include":"#paren-expression" }, { "include":"#action-props" }]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.psl",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.psl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.psl",
					"match": "\\\\."
				}
			]
		},
		"block-name":{
			"patterns": [{
				"name": "constant.character.escape.psl",
				"match": "\\b(DEFAULT|SUCCESS|EXIT)\\b"
			}]
		},
		"action-props":{
			"patterns": [{
				"name": "keyword.other.psl",
				"match": "\\b(Action|Message|AlertType|YesButtonTitle|NoButtonTitle|VarName|AppendText|VaValue|Condition|ExcludeFields|ObjectType|SortClause|MatchFields|ActionShouldComplete|ActionShouldDisplay|Subject|QueryString|QueryReturnFields|QueryTest|QueryTestTrue|QueryTestFalse)\\b"
			}]
		},
		"paren-expression": {
		  "begin": "\\{",
		  "end": "\\}",
		  "beginCaptures": {
			"0": { "name": "punctuation.paren.open" }
		  },
		  "endCaptures": {
			"0": { "name": "punctuation.paren.close" }
		  },
		  "name": "expression.group",
		  "patterns": [{ "include": "#blocks" }]
		}
	},
	"scopeName": "source.psl"
}